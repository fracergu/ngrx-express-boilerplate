{
  "name": "ngrx-express-boilerplate",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "serve": "concurrently --kill-others \"npm run server:start\" \"npm run client:start\"",
    "client:start": "ng serve",
    "server:start": "nodemon src/server.js",
    "client:build": "ng build",
    "server:build": "babel --verbose --out-dir dist --only 'src/server/server.js,src/server/lib/' src/server",
    "build": "npm run clean && npm run client:build && npm run server:build",
    "clean": "rimraf dist coverage",
    "watch": "ng build --watch --configuration development",
    "check": "prettier --check . && ng lint && ng test",
    "test": "ng test",
    "test:watch": "ng test --watch",
    "test:coverage": "ng test --coverage",
    "lint": "ng lint",
    "start": "node dist/server.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.2.0",
    "@angular/cdk": "^13.0.0",
    "@angular/common": "^14.2.0",
    "@angular/compiler": "^14.2.0",
    "@angular/core": "^14.2.0",
    "@angular/forms": "^14.2.0",
    "@angular/material": "^13.0.0",
    "@angular/platform-browser": "^14.2.0",
    "@angular/platform-browser-dynamic": "^14.2.0",
    "@angular/router": "^14.2.0",
    "@ngrx/effects": "^14.3.2",
    "@ngrx/entity": "^14.3.2",
    "@ngrx/store": "^14.3.2",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-builders/jest": "^14.0.2",
    "@angular-devkit/build-angular": "^14.2.5",
    "@angular-eslint/builder": "14.4.0",
    "@angular-eslint/eslint-plugin": "14.4.0",
    "@angular-eslint/eslint-plugin-template": "14.4.0",
    "@angular-eslint/schematics": "14.4.0",
    "@angular-eslint/template-parser": "14.4.0",
    "@angular/cli": "~14.2.5",
    "@angular/compiler-cli": "^14.2.0",
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.5",
    "@babel/eslint-parser": "^7.19.1",
    "@ngrx/store-devtools": "^14.3.2",
    "@types/jest": "28.1.3",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "@typescript-eslint/parser": "5.43.0",
    "babel-loader": "^9.1.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.28.0",
    "jest": "28.1.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "ts-jest": "28.0.8",
    "typescript": "~4.8.2"
  }
}
